{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom","dom.iterable", "scripthost"],
    "skipLibCheck": true,
    "types": ["vuetify","vite/client"],
    "paths": {
      "@/*":            ["src/*"],
      "@assets/*":      ["src/assets/*"],
      "@components":    ["src/components"],
      "@components/*":  ["src/components/*"],
      "@composables":   ["src/composables"],
      "@composables/*": ["src/composables/*"],
      "@enums":         ["src/enums"],
      "@enums/*":       ["src/enums/*"],
      "@layouts":       ["src/layouts"],
      "@layouts/*":     ["src/layouts/*"],
      "@locales":       ["src/locales"],
      "@locales/*":     ["src/locales/*"],
      "@models":        ["src/models"],
      "@models/*":      ["src/models/*"],
      "@plugins":       ["src/plugins"],
      "@plugins/*":     ["src/plugins/*"],
      "@router":        ["src/router"],
      "@router/*":      ["src/router/*"],
      "@services":      ["src/services"],
      "@services/*":    ["src/services/*"],
      "@store":         ["src/store"],
      "@store/*":       ["src/store/*"],
      "@types":         ["src/types"],
      "@types/*":       ["src/types/*"],
      "@theme":         ["src/theme"],
      "@views":         ["src/views"],
      "@views/*":       ["src/views/*"],
    },
  },
  "include": [
    "~icons/**/*",
    "*.d.ts",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
